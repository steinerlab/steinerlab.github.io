<Layout title={CV.TITLE} description={CV.DESCRIPTION}>
  <Container>
    <aside data-pagefind-ignore>
      <div class="space-y-2 md:space-y-10">
        <div class="animate font-semibold text-black dark:text-white">
          Work Experience
        </div>
        <ul class="animate not-prose flex flex-col gap-4">
          {works.map((work) => (
              <CVCard institution={work.company} time={work.time} job_title={work.job_title} location={work.location} description={work.description} />)
          )}
        </ul>
        <div class="animate font-semibold text-black dark:text-white">
          Education
        </div>
        <ul class="animate not-prose flex flex-col gap-4">
          {educations.map((education) => (
            <CVCard institution={education.school} time={education.time} job_title={education.job_title} location={education.location} description={education.description} />)
        )}
        </ul>
        <div class="animate font-semibold text-black dark:text-white">
          Awards
        </div>
        <ul class="animate not-prose flex flex-col gap-2">
          {awards.map((award) => (
            <li class="rounded-lg border border-stone-300 dark:border-stone-700 bg-white/60 dark:bg-stone-900/60 p-4">
              <p class="text-sm uppercase tracking-wide text-stone-500 dark:text-stone-400">{award.year}</p>
              <p class="font-semibold text-black dark:text-white">{award.title}</p>
              <p class="text-sm text-stone-700 dark:text-stone-300">{award.description}</p>
            </li>
          ))}
        </ul>
        <div class="animate font-semibold text-black dark:text-white">
          Selected research support
        </div>
        <ul class="animate not-prose flex flex-col gap-4">
          {supports.map((project) => (
            <li class="rounded-lg border border-stone-300 dark:border-stone-700 bg-white/60 dark:bg-stone-900/60 p-4">
              <div class="flex flex-wrap items-baseline justify-between gap-2">
                <p class="font-semibold text-black dark:text-white">{project.title}</p>
                <span class="text-sm text-stone-500 dark:text-stone-400">{project.year} Â· {project.amount}</span>
              </div>
              <p class="text-sm text-stone-700 dark:text-stone-300">
                {project.role}. {project.description}
              </p>
            </li>
          ))}
        </ul>
